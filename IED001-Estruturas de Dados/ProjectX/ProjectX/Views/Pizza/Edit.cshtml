@model ProjectX.Models.Pizza

<style>
    body {
        font-family: sans-serif;
        margin: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        width: 300px;
    }

    label {
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<form action="@Url.Action("Edit", "Pizza")" method="post">
    <input type="hidden" name="IdPizza" value="@Model.IdPizza" /> <label for="Nome">Nome:</label>
    <input type="text" name="Nome" id="Nome" value="@Model.Nome" /><br />

    <label for="Ingredientes">Ingredientes:</label>
    <input type="text" name="Ingredientes" id="Ingredientes" value="@Model.Ingredientes" /><br />

    <label for="Valor">Valor:</label>
    <input type="number" name="Valor" id="Valor" value="@Model.Valor" /><br />

    <button type="submit">Salvar</button>
</form>